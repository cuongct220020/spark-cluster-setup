# Spark Image Version
# You can change this to use different Spark versions
IMAGE=apache/spark:3.5.0

# Alternative images:
# IMAGE=apache/spark:3.5.1
# IMAGE=apache/spark:3.4.2
# IMAGE=bitnami/spark:3.5.0

# ZooKeeper Version (if needed)
ZOOKEEPER_IMAGE=zookeeper:3.9

# Spark Configuration
SPARK_WORKER_CORES=2
SPARK_WORKER_MEMORY=2G

# Security (uncomment to enable)
# SPARK_RPC_AUTHENTICATION_ENABLED=yes
# SPARK_RPC_AUTHENTICATION_SECRET=your-secret-key-here
# SPARK_RPC_ENCRYPTION_ENABLED=yes