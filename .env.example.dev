# ==============================================
# Spark Image
# ==============================================
SPARK_IMAGE=apache/spark:3.5.0

# ==============================================
# Spark Master Configuration
# ==============================================
SPARK_MASTER_PORT=7077
SPARK_MASTER_WEBUI_PORT=8080
SPARK_MASTER_URL=spark://spark-master:7077

# ==============================================
# Spark Worker Configuration
# ==============================================
SPARK_WORKER_CORES=2
SPARK_WORKER_MEMORY=2G
SPARK_WORKER_WEBUI_PORT=8081
SPARK_LOCAL_DIRS=/tmp/spark-local

# ==============================================
# Spark Event Logging
# ==============================================
SPARK_EVENTLOG_ENABLED=true
SPARK_EVENTLOG_DIR=/opt/spark/spark-events

# ==============================================
# Spark History Server Configuration
# ==============================================
SPARK_HISTORY_LOG_DIR=/opt/spark/spark-events
SPARK_HISTORY_RETAINED_APP=50
SPARK_HISTORY_UI_PORT=18080

# ==============================================
# Spark Daemon Memory
# ==============================================
SPARK_DAEMON_MEMORY=1g

# ==============================================
# Spark Security (Optional - Uncomment to enable)
# ==============================================
SPARK_RPC_AUTHENTICATION_ENABLED=false
SPARK_RPC_AUTHENTICATION_SECRET=your-secret-key-here
SPARK_RPC_ENCRYPTION_ENABLED=false

# ==============================================
# Additional Spark Configuration (Optional)
# ==============================================
# SPARK_DRIVER_MEMORY=1g
# SPARK_EXECUTOR_MEMORY=1g
# SPARK_EXECUTOR_CORES=1